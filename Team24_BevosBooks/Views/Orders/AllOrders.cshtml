@model IEnumerable<Team24_BevosBooks.Models.Order>

<h2>All Orders</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Date</th>
            <th>Total Items</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderID</td>
                <td>@o.User.FirstName @o.User.LastName</td>
                <td>@o.OrderStatus</td>
                <td>@o.OrderDate.ToShortDateString()</td>
                <td>@o.OrderDetails.Count()</td>
            </tr>
        }
    </tbody>
</table>
