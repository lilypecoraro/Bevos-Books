@model Team24_BevosBooks.Models.Order
@using Team24_BevosBooks.Models

@{
    ViewData["Title"] = "Order Confirmation";
    var recs = ViewBag.Recommendations as List<Book>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2 class="text-dark">Order Confirmation</h2>
            <p class="lead text-dark">Thank you for your purchase, @User.Identity.Name!</p>

            <div class="card mb-4">
                <div class="card-header bg-light text-dark">
                    <strong>Order #@Model.OrderID</strong> — placed on @Model.OrderDate.ToString("g")
                </div>
                <div class="card-body bg-white text-dark">
                    <h5 class="card-title text-dark">Items</h5>
                    <ul class="list-group list-group-flush">
                        @foreach (var od in Model.OrderDetails)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center text-dark bg-white">
                                <span class="text-dark">
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@od.BookID" class="text-dark">
                                        @od.Book.Title
                                    </a>
                                    — @od.Quantity × @od.Price.ToString("c")
                                </span>
                                <span class="badge bg-light text-dark">@((od.Price * od.Quantity).ToString("c"))</span>
                            </li>
                        }
                    </ul>

                    <div class="mt-3 text-dark" style="color:black;">
                        <p><strong>Subtotal:</strong> <span style="color:black;">@(Model.OrderDetails.Sum(od => od.Price * od.Quantity).ToString("c"))</span></p>
                        <p><strong>Shipping:</strong> <span style="color:black;">@Model.ShippingFee.ToString("c")</span></p>
                        <p><strong>Total:</strong> <span style="color:black;">@((Model.OrderDetails.Sum(od => od.Price * od.Quantity) + Model.ShippingFee).ToString("c"))</span></p>
                    </div>
                </div>
            </div>

            <a asp-controller="Orders" asp-action="History" class="btn btn-outline-primary">View Order History</a>
            <a asp-controller="Books" asp-action="HomeCatalog" class="btn btn-primary">Continue Shopping</a>
        </div>

        <div class="col-md-4">
            @if (recs != null && recs.Any())
            {
                <h4 class="text-dark">You may also like:</h4>
                <div class="list-group">
                    @foreach (var book in recs)
                    {
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookID" class="list-group-item list-group-item-action text-dark bg-white">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 text-dark">@book.Title</h5>
                                <small class="text-dark">by @book.Authors</small>
                            </div>
                            @if (book.Reviews.Any())
                            {
                                var avgRating = book.Reviews.Average(r => (double?)r.Rating) ?? 0.0;
                                <small class="text-dark">Rating: @($"{avgRating:0.0}") / 5</small>
                            }
                            else
                            {
                                <small class="text-dark">No ratings yet</small>
                            }
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>
