@model Team24_BevosBooks.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<h2 class="mt-3 mb-4 confirm-title">Thank you! Your order has been placed.</h2>

<div class="order-confirm-page">

    <div class="card mb-4">
        <div class="card-header">
            <h5>Order Summary</h5>
        </div>
        <div class="card-body">

            <p><strong>Order Number:</strong> @Model.OrderID</p>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>

            <table class="table table-bordered mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Book</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@detail.Book.Title</td>
                            <td>@detail.Price.ToString("c")</td>
                            <td>@detail.Quantity</td>
                            <td>@((detail.Price * detail.Quantity).ToString("c"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <hr />

            @{
                decimal subtotal = Model.OrderDetails.Sum(od => od.Quantity * od.Price);
                decimal total = subtotal + Model.ShippingFee;
            }

            <p><strong>Shipping:</strong> @Model.ShippingFee.ToString("c")</p>
            <p><strong>Subtotal:</strong> @subtotal.ToString("c")</p>
            <p class="fs-4"><strong>Total:</strong> @total.ToString("c")</p>

        </div>
    </div>

    <!-- Recommendations -->
    @if (ViewBag.Recommendations != null)
    {
        <h3>You may also like</h3>
        <div class="row">
            @foreach (var book in (List<Team24_BevosBooks.Models.Book>)ViewBag.Recommendations)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5>@book.Title</h5>
                            <p>@book.Authors</p>
                            <p class="text-muted">@book.Price.ToString("c")</p>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookID"
                               class="btn btn-primary btn-sm">View Book</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <a asp-controller="Orders" asp-action="History" class="btn btn-outline-secondary mt-3">View Order History</a>

</div>

@section Styles {
    <style>
        /* Scope all overrides to this page wrapper */
        .order-confirm-page,
        .order-confirm-page h3,
        .order-confirm-page h5,
        .order-confirm-page p,
        .order-confirm-page strong,
        .order-confirm-page table,
        .order-confirm-page th,
        .order-confirm-page td {
            color: #000 !important;
        }

            .order-confirm-page .card,
            .order-confirm-page .card-header,
            .order-confirm-page .card-body {
                background-color: #ffffff !important;
            }

            .order-confirm-page .table {
                background-color: #ffffff !important;
            }

        /* Keep the main success title white */
        .confirm-title {
            color: #ffffff !important;
        }
    </style>
}