@model IEnumerable<Team24_BevosBooks.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h2 class="mt-3 mb-4">Your Order History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have not placed any orders yet.</div>
    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">Browse Books</a>
    return;
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Order Number</th>
            <th>Date</th>
            <th>Items</th>
            <th>Total</th>
            <th>Card Used</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
        {
            decimal subtotal = order.OrderDetails.Sum(od => od.Price * od.Quantity);
            decimal total = subtotal + order.ShippingFee;

            // Safer mask (handles missing card/details)
            var cardNumber = order.OrderDetails.FirstOrDefault(od => od.Card != null)?.Card.CardNumber;
            string maskedCard = !string.IsNullOrWhiteSpace(cardNumber) && cardNumber.Length >= 4
                ? $"•••• •••• •••• {cardNumber[^4..]}"
                : "(n/a)";

            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.OrderDetails.Sum(od => od.Quantity)</td>
                <td>@total.ToString("c")</td>
                <td>@maskedCard</td>
                <td>
                    <a asp-action="OrderConfirmation" asp-route-id="@order.OrderID"
                       class="btn btn-sm btn-primary">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
