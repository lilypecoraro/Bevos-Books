@model IEnumerable<Team24_BevosBooks.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h2 class="mt-3 mb-4 text-dark">Your Order History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-dark">You have not placed any orders yet.</div>
    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">Browse Books</a>
    return;
}

<table class="table table-bordered table-striped bg-white text-dark">
    <thead class="table-dark">
        <tr>
            <th>Order Number</th>
            <th>Date</th>
            <th>Book(s)</th>
            <th>Quantity</th>
            <th>Shipping</th>
            <th>Total</th>
            <th>Card Used</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
        {
            decimal subtotal = order.OrderDetails.Sum(od => od.Price * od.Quantity);
            decimal total = subtotal + order.ShippingFee;

            var cardNumber = order.OrderDetails.FirstOrDefault(od => od.Card != null)?.Card.CardNumber;
            string maskedCard = !string.IsNullOrWhiteSpace(cardNumber) && cardNumber.Length >= 4
                ? $"**** **** **** {cardNumber[^4..]}"
                : "(n/a)";

            <tr class="text-dark bg-white">
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToShortDateString()</td>

                <!-- BOOK TITLES -->
                <td class="books-column text-dark bg-white">
                    @foreach (var od in order.OrderDetails)
                    {
                        <div class="text-dark">@od.Book?.Title</div>
                    }
                </td>

                <!-- QUANTITIES -->
                <td class="quantity-column text-dark bg-white">
                    @foreach (var od in order.OrderDetails)
                    {
                        <div class="text-dark">@od.Quantity</div>
                    }
                </td>

                <td>@order.ShippingFee.ToString("c")</td>
                <td>@total.ToString("c")</td>
                <td>@maskedCard</td>

                <td>
                    <a asp-action="OrderConfirmation" asp-route-id="@order.OrderID"
                       class="btn btn-sm btn-primary">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
