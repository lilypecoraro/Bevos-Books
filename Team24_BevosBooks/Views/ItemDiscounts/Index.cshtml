@model IEnumerable<Team24_BevosBooks.Models.ItemDiscount>
@{
    ViewData["Title"] = "Manage Item Discounts";
}
<h2 class="mt-3 mb-3">Manage Item Discounts</h2>

<table class="table table-striped bg-white text-dark">
    <thead class="table-dark">
        <tr>
            <th>Book</th>
            <th>Percent</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Book?.Title</td>
            <td>@(d.DiscountPercent.HasValue ? d.DiscountPercent.Value.ToString("0.##") + "%" : "-")</td>
            <td>@(d.DiscountAmount.HasValue ? d.DiscountAmount.Value.ToString("C") : "-")</td>
            <td>@d.Status</td>
            <td>@(d.StartDate.HasValue ? d.StartDate.Value.ToShortDateString() : "-")</td>
            <td>@(d.EndDate.HasValue ? d.EndDate.Value.ToShortDateString() : "-")</td>
            <td>
                <a asp-action="Toggle" asp-route-id="@d.ItemDiscountID" class="btn btn-sm btn-secondary">
                    @(d.Status == "Enabled" ? "Disable" : "Enable")
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>