@model Team24_BevosBooks.Models.ItemDiscount
@{
    ViewData["Title"] = "Add Discount";
    var book = ViewBag.Book as Team24_BevosBooks.Models.Book;
}

<h2 class="mt-3 mb-3">Add Discount — @book?.Title</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="BookID" />

    <div class="row">
        <div class="col-md-6">

            <!-- PERCENT OFF -->
            <div class="mb-3">
                <label asp-for="DiscountPercent" class="form-label">Percent Off (%)</label>
                <input asp-for="DiscountPercent" class="form-control" type="number" step="0.01" min="0" max="100" />
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>

            <!-- FLAT AMOUNT OFF (US Currency) -->
            <div class="mb-3">
                <label asp-for="DiscountAmount" class="form-label">Flat Amount Off</label>
                <div class="input-group">
                    
                    <input name="DiscountAmount"
                           class="form-control"
                           type="number"
                           step="0.01"
                           min="0"
                           value="@(Model?.DiscountAmount.HasValue == true ? Model.DiscountAmount.Value.ToString("0.00") : "")" />
                </div>
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>

            <!-- STATUS -->
            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option>Enabled</option>
                    <option>Disabled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">

            <!-- START DATE -->
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Start Date (optional)</label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- END DATE -->
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">End Date (optional)</label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <!-- BOOK CONTEXT (READ-ONLY DISPLAY) -->
            <div class="mb-3">
                <label class="form-label">Current Price</label>
                <input class="form-control" value="@(book != null ? book.Price.ToString("C") : "-")" readonly />
            </div>

        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Discount</button>
    <a asp-controller="Books" asp-action="Details" asp-route-id="@book?.BookID" class="btn btn-secondary ms-2">Cancel</a>
</form>