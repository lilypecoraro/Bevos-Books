@model IEnumerable<Team24_BevosBooks.Models.Book>

@{
    ViewData["Title"] = "Manual Reorder";
}

<h2>Manual Reorder</h2>

<!-- Search form -->
<form asp-action="ManualReorder" method="get" class="mb-3 row">
    <div class="col-md-4">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
               class="form-control" placeholder="Search title/author..." style="color:black; background-color:white;" />
    </div>
    <div class="col-md-3">
        <select name="genre" class="form-select" style="color:black; background-color:white;">
            <option value="">All Genres</option>
            @foreach (var g in ViewBag.Genres as List<string>)
            {
                <option value="@g">@g</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <select name="sortOrder" class="form-select" style="color:black; background-color:white;">
            <option value="title">Title</option>
            <option value="author">Author</option>
        </select>
    </div>
    <div class="col-md-2 form-check">
        <input type="checkbox" name="inStockOnly" value="true" class="form-check-input" style="color:black; background-color:white;" />
        <label class="form-check-label">In Stock Only</label>
    </div>
    <div class="col-md-12 mt-2">
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<!-- Order form -->
<form asp-action="ManualReorder" method="post">
    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Select</th>
                <th>Title</th>
                <th>Authors</th>
                <th>Price</th>
                <th>Last Cost</th>
                <th>Avg Profit Margin</th>
                <th>Inventory</th>
                <th>Reorder Point</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="bookIds" value="@book.BookID" style="color:black; background-color:white;" />
                    </td>
                    <td>@book.Title</td>
                    <td>@book.Authors</td>
                    <td>@book.Price.ToString("c")</td>
                    <td>@book.Cost.ToString("c")</td>
                    <td>
                        @if (book.AvgProfitMargin != null)
                        {
                            @($"{book.AvgProfitMargin:P2}") <!-- formatted as percentage -->
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@book.InventoryQuantity</td>
                    <td>@book.ReorderPoint</td>
                    <td>
                        <input type="number" name="qty_@book.BookID" value="5" min="1"
                               class="form-control form-control-sm" style="color:black; background-color:white; width:90px;" />
                    </td>
                    <td>
                        <input type="number" step="0.01" name="cost_@book.BookID" value="@book.Cost"
                               class="form-control form-control-sm" style="color:black; background-color:white; width:90px;" />
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@book.BookID"
                           class="btn btn-sm btn-info">Book Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Place Orders</button>
</form>
