@model IEnumerable<Team24_BevosBooks.Models.Order>

@{
    ViewData["Title"] = "Supplier Orders";
}

<h2>Supplier Orders</h2>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th style="width:10%;">Order ID</th>
            <th style="width:15%;">Date</th>
            <th style="width:15%;">Status</th>
            <th style="width:60%;">Books Ordered</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.OrderStatus</td>
                <td>
                    <table class="table table-bordered table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:40%;">Book Name</th>
                                <th style="width:20%;">Amount Ordered</th>
                                <th style="width:20%;">Order Price</th>
                                <th style="width:20%;">Check In</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in order.OrderDetails)
                            {
                                <tr>
                                    <td>@detail.Book?.Title</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.Cost.ToString("c")</td>
                                    <td>
                                        @if (order.OrderStatus == "SupplierOrder")
                                        {
                                            <form asp-action="CheckIn" method="post" class="d-flex align-items-center gap-2">
                                                <input type="hidden" name="orderDetailId" value="@detail.OrderDetailID" />
                                                <input type="number"
                                                       name="arrivedQty"
                                                       min="0"
                                                       max="@detail.Quantity"
                                                       value="@detail.Quantity"
                                                       class="form-control form-control-sm"
                                                       style="width:90px; color:black; background-color:white;" />
                                                <button type="submit" class="btn btn-secondary btn-sm">Check In</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-success">Received</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
