@model IEnumerable<Team24_BevosBooks.Models.Book>

@{
    ViewData["Title"] = "Automatic Reorder";
}

<h2>Automatic Reorder</h2>

<p>These books are below their reorder point. Adjust quantities or costs before placing orders.</p>

<form asp-action="AutoReorder" method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Select</th>
                <th>Book Name</th>
                <th>Inventory</th>
                <th>Reorder Point</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="bookIds" value="@book.BookID" checked style="color:black; background-color:white;" />
                    </td>
                    <td>@book.Title</td>
                    <td>@book.InventoryQuantity</td>
                    <td>@book.ReorderPoint</td>
                    <td>
                        <input type="number" name="qty_@book.BookID" value="5" min="0"
                               class="form-control form-control-sm" style="color:black; background-color:white; width:90px;" />
                    </td>
                    <td>
                        <input type="number" step="0.01" name="cost_@book.BookID" value="@book.Cost"
                               class="form-control form-control-sm" style="color:black; background-color:white; width:90px;" />
                    </td>
                    <td>
                        <input type="checkbox" name="removeIds" value="@book.BookID" style="color:black; background-color:white;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Place Automatic Orders</button>
</form>
