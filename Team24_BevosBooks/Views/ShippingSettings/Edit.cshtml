@model Team24_BevosBooks.Models.ShippingSetting

@{
    ViewData["Title"] = "Edit Shipping Settings";
}

<h2 class="mt-3 mb-4 text-white">Edit Shipping Settings</h2>

<div class="row">
    <div class="col-md-6 bg-white p-4 rounded shadow-sm text-dark">
        <form asp-action="Edit" method="post" class="text-dark">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- First Book Rate -->
            <div class="form-group mb-3">
                <label asp-for="FirstBookRate" class="control-label text-dark"></label>
                <input asp-for="FirstBookRate" class="form-control text-dark" type="number" step="0.01" min="0" />
                <span asp-validation-for="FirstBookRate" class="text-danger"></span>
            </div>

            <!-- Additional Book Rate -->
            <div class="form-group mb-3">
                <label asp-for="AdditionalBookRate" class="control-label text-dark"></label>
                <input asp-for="AdditionalBookRate" class="form-control text-dark" type="number" step="0.01" min="0" />
                <span asp-validation-for="AdditionalBookRate" class="text-danger"></span>
            </div>

            <!-- Hidden SettingID -->
            <input type="hidden" asp-for="SettingID" />

            <!-- Save Button -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Orders" asp-action="AllOrders" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        /* Force black text inside the white box */
        .bg-white.text-dark,
        .bg-white .text-dark,
        .form-control.text-dark {
            color: #000 !important;
        }

        label.control-label.text-dark {
            color: #000 !important;
            font-weight: 600;
        }
    </style>
}
