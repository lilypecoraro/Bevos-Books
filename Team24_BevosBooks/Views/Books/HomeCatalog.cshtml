<style>
    /* Make all book card text black (except buttons + badges) */
    .discover-card,
    .discover-card h5,
    .discover-card p,
    .discover-card .fw-bold {
        color: #111 !important;
    }

        /* Authors slightly lighter */
        .discover-card .text-muted {
            color: #333 !important;
        }
</style>

@using Team24_BevosBooks.Models
@{
    ViewData["Title"] = "Discover Books";

    var bestsellers = ViewBag.Bestsellers as List<Book> ?? new List<Book>();
    var sections = ViewBag.GenreSections as Dictionary<string, List<Book>>
                   ?? new Dictionary<string, List<Book>>();
}

<h1 class="discover-title text-center">Discover Your Next Read</h1>

<!-- ⭐ BESTSELLERS -->
<section class="mb-5">
    <h3 class="discover-section-title">⊹₊˚‧Bestsellers･ﾟ✧:･.☽˚｡･ﾟ✧:･.:</h3>

    @if (!bestsellers.Any())
    {
        <p class="text-muted">No bestseller data available.</p>
    }
    else
    {
        <div class="row">
            @foreach (var b in bestsellers)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="discover-card shadow-sm">
                        <h5 class="discover-book-title">@b.Title</h5>
                        <p class="text-muted">@b.Authors</p>

                        @if (b.Genre != null)
                        {
                            <span class="badge bg-primary discover-badge">@b.Genre.GenreName</span>
                        }

                        <p class="mt-2 fw-bold">@b.Price.ToString("c")</p>

                        <a asp-controller="Books"
                           asp-action="Details"
                           asp-route-id="@b.BookID"
                           class="btn btn-outline-primary w-100 discover-btn">
                            View Book
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</section>


<!-- ⭐ GENRE SPOTLIGHTS -->
@foreach (var pair in sections)
{
    var genreName = pair.Key;
    var books = pair.Value ?? new List<Book>();

    <section class="mb-5">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="discover-section-title">@genreName Spotlight</h3>

            @if (books.Any())
            {
                <a asp-controller="Books"
                   asp-action="Index"
                   asp-route-genreId="@books.First().GenreID"
                   class="btn btn-sm btn-outline-secondary discover-btn">
                    Explore all @genreName →
                </a>
            }
        </div>

        @if (!books.Any())
        {
            <p class="text-muted">No books available in this genre.</p>
        }
        else
        {
            <div class="row">
                @foreach (var b in books)
                {
                    <div class="col-md-4 col-lg-3 mb-4">
                        <div class="discover-card shadow-sm">
                            <h5 class="discover-book-title">@b.Title</h5>
                            <p class="text-muted">@b.Authors</p>
                            <p class="fw-bold mt-2">@b.Price.ToString("c")</p>

                            <a asp-controller="Books"
                               asp-action="Details"
                               asp-route-id="@b.BookID"
                               class="btn btn-outline-primary w-100 discover-btn">
                                View Book
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
}