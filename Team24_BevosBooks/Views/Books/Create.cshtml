@model Team24_BevosBooks.Models.Book
@{
    ViewData["Title"] = "Add Book";
}

<h2 class="mt-3 mb-3">Add New Book</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-6">

            <!-- TITLE -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- AUTHORS -->
            <div class="mb-3">
                <label asp-for="Authors" class="form-label"></label>
                <input asp-for="Authors" class="form-control" />
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">

            <!-- GENRE -->
            <div class="mb-3">
                <label asp-for="GenreID" class="form-label"></label>
                <select asp-for="GenreID" class="form-select" asp-items="ViewBag.GenreID"></select>
                <span asp-validation-for="GenreID" class="text-danger"></span>
            </div>

            <!-- PRICE -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- SUPPLIER COST -->
            <div class="mb-3">
                <label class="form-label">Supplier Cost</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <!-- PUBLISH DATE -->
            <div class="mb-3">
                <label asp-for="PublishDate" class="form-label"></label>
                <input asp-for="PublishDate" class="form-control" type="date" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>

            <!-- INVENTORY -->
            <div class="mb-3">
                <label asp-for="InventoryQuantity" class="form-label"></label>
                <input asp-for="InventoryQuantity" class="form-control" />
                <span asp-validation-for="InventoryQuantity" class="text-danger"></span>
            </div>

            <!-- REORDER POINT -->
            <div class="mb-3">
                <label asp-for="ReorderPoint" class="form-label"></label>
                <input asp-for="ReorderPoint" class="form-control" />
                <span asp-validation-for="ReorderPoint" class="text-danger"></span>
            </div>

        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>