@model IEnumerable<Team24_BevosBooks.Models.Review>

@{
    ViewData["Title"] = "Moderated Reviews";
}

<h2>Approved and Rejected Reviews</h2>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Customer</th>
            <th>Book Title</th>
            <th>Rating</th>
            <th>Review Body</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@($"{r.Reviewer?.FirstName} {r.Reviewer?.LastName}")</td>
            <td>@r.Book?.Title</td>
            <td>@(r.Rating.HasValue ? r.Rating.Value.ToString() : "—")</td>
            <td>@r.ReviewText</td>
            <td>@r.DisputeStatus</td>
        </tr>
    }
    </tbody>
</table>
