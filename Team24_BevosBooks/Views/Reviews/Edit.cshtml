@model Team24_BevosBooks.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<h2 class="mt-4 mb-3">Edit Review</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReviewID" />

    <div class="mb-2">
        <label>Book</label>
        <input value="@Model.Book?.Title" class="form-control" readonly />
    </div>

    <div class="mb-2">
        <label>Reviewer</label>
        <input value="@Model.Reviewer?.Email" class="form-control" readonly />
    </div>

    <div class="mb-2">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" readonly />
        <span class="text-muted">Employees cannot change ratings.</span>
    </div>

    <div class="mb-3">
        <label asp-for="ReviewText"></label>
        <textarea asp-for="ReviewText" class="form-control" rows="5"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Pending" class="btn btn-secondary ms-2">Cancel</a>
</form>
