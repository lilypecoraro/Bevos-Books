@model Team24_BevosBooks.Models.Review

@{
    ViewData["Title"] = "Write a Review";
    string bookTitle = ViewBag.BookTitle as string ?? "(Unknown Title)";
    string bookAuthors = ViewBag.BookAuthors as string ?? "(Unknown Author)";
}

<h2>Write a Review</h2>

<!-- Clear context: which book is being reviewed -->
<div class="alert alert-info bg-white text-dark mb-3">
    You are writing a review for:
    <strong class="text-dark">@bookTitle</strong>
    <span class="text-muted">by @bookAuthors</span>
</div>

<!-- Shows model-level errors (e.g., purchase requirement / duplicate review) -->
<div class="mb-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</div>

<form asp-action="Submit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="BookID" />

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            <option value="">Select rating</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ReviewText" class="form-label">Review</label>
        <textarea asp-for="ReviewText" class="form-control" maxlength="100"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
