@model Team24_BevosBooks.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<h2 class="mt-4 mb-3">Create Your Account</h2>

<div class="row">
    <div class="col-md-6">

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <!-- MODEL-LEVEL ERRORS (Password requirements, duplicates, etc.) -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- EMAIL -->
            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- PASSWORD -->
            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="form-group mb-2">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <hr />

            <!-- FIRST NAME -->
            <div class="form-group mb-2">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- LAST NAME -->
            <div class="form-group mb-2">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- ADDRESS -->
            <div class="form-group mb-2">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- CITY -->
            <div class="form-group mb-2">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- STATE DROPDOWN -->
            <div class="form-group mb-2">
                <label asp-for="State"></label>
                <select asp-for="State" class="form-select"
                        asp-items="@(new SelectList(ViewBag.States))">
                    <option value="">-- Select State --</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <!-- ZIP -->
            <div class="form-group mb-2">
                <label asp-for="ZipCode"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>

            <!-- PHONE NUMBER (no auto format) -->
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" type="tel" inputmode="numeric" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Account</button>

        </form>
    </div>
</div>