@model IEnumerable<Team24_BevosBooks.Models.Card>

@{
    ViewData["Title"] = "My Credit Cards";
    var alertClass = (string)(TempData["AlertClass"] ?? "info");
    var message = TempData["Message"] as string;
}

<h2 class="mt-4 mb-3">My Credit Cards</h2>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-@alertClass" role="alert">@message</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">You have no saved credit cards.</div>
    <a asp-action="AddCard" class="btn btn-primary">Add Credit Card</a>
}
else
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Card Type</th>
                <th>Card Number</th>
                <th style="width: 140px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var card in Model)
        {
            <tr>
                <td>@card.CardType</td>
                <td>@card.CardNumber</td>
                <td>
                    <form asp-action="RemoveCard" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@card.CardID" />
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Remove this credit card?');">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="AddCard" class="btn btn-outline-secondary">Add Another Card</a>
}