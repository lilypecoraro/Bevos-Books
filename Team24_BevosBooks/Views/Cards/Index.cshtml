@model IEnumerable<Team24_BevosBooks.Models.Card>

@{
    ViewData["Title"] = "Cards";
}

<div class="alert alert-info mt-3 mb-4" role="alert" style="font-size:0.95rem;">
    For viewing seeding data and milestone #1 only. Will be adjusted later.
</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Card ID</th>
            <th>Customer ID</th>
            <th>Card Number</th>
            <th>Card Type</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var card in Model)
    {
        <tr>
            <td>@card.CardID</td>
            <td>@card.UserID</td>
            <td>@card.CardNumber</td>
            <td>@card.CardType</td>
        </tr>
    }
    </tbody>
</table>