@model IEnumerable<Team24_BevosBooks.Models.Book>

@{
    ViewData["Title"] = "Home";
    ViewData["FullWidth"] = true;
}

<style>
    /* ============================================================
       HERO FIXES
    ============================================================ */

    .hero-logo {
        width: 130px !important;
        max-width: 130px !important;
        height: auto !important;
        object-fit: contain !important;
        display: block !important;
        margin: 0 auto 1.5rem !important;
    }

    .hero-bg {
        position: absolute !important;
        inset: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }

    .hero-content {
        position: relative;
        z-index: 5;
    }

    .hero-container {
        position: relative !important;
        z-index: 0 !important;
    }

    .hero-content,
    .hero-logo,
    .hero-bg {
        z-index: 0 !important;
    }

    /* ============================================================
   COMPACT WAVY PROMO BAR (NOT FULL WIDTH)
=========================================================== */

    .promo-wave-marquee {
        position: relative !important;
        width: 100%;
        overflow: hidden;
        padding: 1.25rem 0 !important;
        z-index: 999999 !important;
        display: flex;
        justify-content: center; /* centers the wave */
        pointer-events: none;
        background: transparent !important;
    }

    /* two svg copies stacked horizontally */
    .promo-wave-track {
        display: flex;
        width: calc(900px * 2); /* very compact — only 900px wide */
        animation: promoWaveScroll 20s linear infinite;
    }

    /* compact svg */
    .promo-wave-marquee svg {
        width: 900px !important; /* compact width */
        height: 80px !important; /* smaller height */
        flex-shrink: 0;
    }

    .promo-wave-text {
        fill: #f5b338 !important;
        font-size: 1.6rem !important;
        font-weight: 600 !important;
    }

    /* smooth loop, moves ONLY 900px instead of full screen */
    @@keyframes promoWaveScroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-900px);
        }
    }
</style>

<!-- HERO SECTION -->
<section class="hero-container">
    <div class="hero-bg"></div>

    <div class="hero-content text-center">

        <!-- LOGO -->
        <img src="~/BevoBookLogo.png"
             alt="Bevo Books Logo"
             class="hero-logo" />

        <h1 class="hero-title">Bevo’s Books</h1>
        <p class="hero-subtitle">Your online bookstore for all your favorite titles.</p>

        <!-- Search bar -->
        <form asp-controller="Books"
              asp-action="Index"
              method="get"
              class="hero-searchbar d-flex justify-content-center mt-4">

            <input type="text"
                   name="searchString"
                   value="@Context.Request.Query["searchString"]"
                   class="form-control hero-search-input"
                   placeholder="Search books by title or author..." />

            <button type="submit" class="btn hero-btn-solid ms-2">Search</button>
        </form>
    </div>
</section>

<!-- CURVY PROMO MARQUEE -->
<div class="promo-wave-marquee">
    <div class="promo-wave-track">

        <!-- copy #1 -->
        <svg xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 1200 120"
             preserveAspectRatio="none">
            <path id="promoWavePath1"
                  d="M 0 60
                     C 200 20, 400 100, 600 60
                     C 800 20, 1000 100, 1200 60"
                  fill="none" stroke="none" />

            <text class="promo-wave-text">
                <textPath href="#promoWavePath1" text-anchor="start">
                    ★ Promo: Use code BEVO10 for 10% off your entire order! ★
                </textPath>
            </text>
        </svg>

        <!-- copy #2 -->
        <svg xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 1200 120"
             preserveAspectRatio="none">
            <path id="promoWavePath2"
                  d="M 0 60
                     C 200 20, 400 100, 600 60
                     C 800 20, 1000 100, 1200 60"
                  fill="none" stroke="none" />

            <text class="promo-wave-text">
                <textPath href="#promoWavePath2" text-anchor="start">
                    ★ Promo: Use code BEVO10 for 10% off your entire order! ★
                </textPath>
            </text>
        </svg>

    </div>
</div>