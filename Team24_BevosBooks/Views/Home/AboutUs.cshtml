@{
    ViewData["Title"] = "About Us";
    ViewData["FullWidth"] = true;
}

<style>

    .mccombs-logo {
        width: 200px; /* bigger so it's noticeable */
        opacity: 1 !important; /* no transparency */
        filter: brightness(200%); /* forces it to appear bright white */
        mix-blend-mode: screen; /* makes it glow over dark backgrounds */
        margin: 1rem auto 0;
    }
/* ---------------------------
   BACKGROUND LONGHORN WATERMARK
   --------------------------- */
.longhorn-watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 500px;
    height: auto;
    opacity: 0.06; /* super subtle */
    transform: translate(-50%, -50%);
    pointer-events: none;
    z-index: 0;
}

.about-wrapper {
    position: relative;
    z-index: 1;
}


/* ---------------------------
   HOOK 'EM FOOTER
   --------------------------- */
.hookem-footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255,255,255,0.15);
}

.hookem-text {
    color: #f5b338;
    font-family: "VT323", monospace;
    font-size: 2rem;
    letter-spacing: 1px;
    animation: hookemFade 2s ease-in-out infinite alternate;
}

@@keyframes hookemFade {
    0% { opacity: 0.6; text-shadow: 0 0 5px rgba(245,179,56,0.4); }
    100% { opacity: 1; text-shadow: 0 0 15px rgba(245,179,56,0.8); }
}


/* ---------------------------
   MAIN ABOUT SECTION
   --------------------------- */
.about-wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    text-align: center;
}

.about-title {
    font-family: "VT323", monospace;
    font-size: clamp(3rem, 6vw, 4rem);
    color: #fff;
    margin-bottom: 1rem;
}

.about-text {
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255,255,255,0.9);
    max-width: 650px;
    margin: 0 auto 2.5rem auto;
}


/* ---------------------------
   TEAM GRID + CARD ANIMATION
   --------------------------- */
.team-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 3.5rem; /* extra spacing above thanks */
}

.team-card {
    background: rgba(255,255,255,0.12);
    padding: 1.25rem;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.15);
    text-align: center;
    opacity: 0;
    transform: translateY(15px);
    animation: fadeUp 0.9s ease forwards;
}

.team-card:nth-child(1) { animation-delay: 0.1s; }
.team-card:nth-child(2) { animation-delay: 0.25s; }
.team-card:nth-child(3) { animation-delay: 0.4s; }
.team-card:nth-child(4) { animation-delay: 0.55s; }

@@keyframes fadeUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.team-photo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #f5b338;
    margin-bottom: 0.75rem;
}

.team-name {
    color: #fff;
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-size: 1.05rem;
}

.team-role {
    color: #f5b338;
    font-size: 0.9rem;
}


/* ---------------------------
   THANK YOU SECTION + MCCOMBS LOGO
   --------------------------- */
.thanks-section {
    margin-top: 3rem;
    padding: 2.5rem 1.5rem;
    background: rgba(255,255,255,0.08);
    border-radius: 12px;
    border: 1px solid rgba(255,255,255,0.15);
    text-align: center;
    opacity: 0;
    animation: sectionFade 1.4s ease forwards;
}

@@keyframes sectionFade {
    to { opacity: 1; }
}

.thanks-title {
    font-family: "VT323", monospace;
    font-size: clamp(2.2rem, 5vw, 3rem);
    color: #fff;
    margin-bottom: 1rem;
}

.thanks-text {
    color: rgba(255,255,255,0.85);
    max-width: 650px;
    margin: 0 auto 1.75rem auto;
    font-size: 1.05rem;
    line-height: 1.6;
}

.thanks-names {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.25rem;
    margin-bottom: 1.75rem;
}

.thanks-name {
    color: #f5b338;
    font-weight: 600;
    font-size: 1rem;
}

/* McCombs logo styling */
.mccombs-logo {
    width: 180px;
    opacity: 0.9;
    margin: 0.5rem auto 0;

}
