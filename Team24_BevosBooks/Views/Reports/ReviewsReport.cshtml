@model Team24_BevosBooks.ViewModels.ReviewsReportVM

@{
    ViewData["Title"] = "Approved/Rejected Reviews";
}

<h2>Approved/Rejected Reviews</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <select class="form-select" name="sort">
        <option value="empAsc" selected="@(Model.CurrentSort == "empAsc")">EmpID ↑</option>
        <option value="approvedAsc" selected="@(Model.CurrentSort == "approvedAsc")">Approved ↑</option>
        <option value="approvedDesc" selected="@(Model.CurrentSort == "approvedDesc")">Approved ↓</option>
        <option value="rejectedAsc" selected="@(Model.CurrentSort == "rejectedAsc")">Rejected ↑</option>
        <option value="rejectedDesc" selected="@(Model.CurrentSort == "rejectedDesc")">Rejected ↓</option>
    </select>
    <button class="btn btn-primary" type="submit">Apply</button>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Approved</th>
            <th>Rejected</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.EmployeeId</td>
                <td>@r.EmployeeName</td>
                <td>@r.ApprovedCount</td>
                <td>@r.RejectedCount</td>
            </tr>
        }
    </tbody>
</table>
