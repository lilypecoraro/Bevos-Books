@model Team24_BevosBooks.ViewModels.CustomersReportVM

@{
    ViewData["Title"] = "Customers Report";
    var totalRevenue = Model.Rows.Sum(r => r.Revenue);
    var totalCost = Model.Rows.Sum(r => r.Cost);
    var totalProfit = Model.Rows.Sum(r => r.Profit);
    var totalMargin = totalRevenue > 0 ? totalProfit / totalRevenue : 0m;
}

<h2>Customers Report</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <input class="form-control" type="date" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
    <input class="form-control" type="date" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />

    <select class="form-select" name="sort">
        <option value="profitDesc" selected="@(Model.CurrentSort == "profitDesc")">Profit ↓</option>
        <option value="profitAsc" selected="@(Model.CurrentSort == "profitAsc")">Profit ↑</option>
        <option value="revenueDesc" selected="@(Model.CurrentSort == "revenueDesc")">Revenue ↓</option>
        <option value="revenueAsc" selected="@(Model.CurrentSort == "revenueAsc")">Revenue ↑</option>
    </select>

    <button class="btn btn-primary" type="submit">Apply</button>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Total Qty</th>
            <th>Revenue</th>
            <th>Cost</th>
            <th>Profit</th>
            <th>Margin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.CustomerName (@r.CustomerId)</td>
                <td>@r.TotalQuantity</td>
                <td>@r.Revenue.ToString("c")</td>
                <td>@r.Cost.ToString("c")</td>
                <td>@r.Profit.ToString("c")</td>
                <td>@($"{r.Margin:P2}")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-secondary fw-bold">
            <td colspan="2">Totals</td>
            <td>@totalRevenue.ToString("c")</td>
            <td>@totalCost.ToString("c")</td>
            <td>@totalProfit.ToString("c")</td>
            <td>@($"{totalMargin:P2}")</td>
        </tr>
    </tfoot>
</table>
