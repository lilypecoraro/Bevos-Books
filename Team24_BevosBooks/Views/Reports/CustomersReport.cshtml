@model Team24_BevosBooks.ViewModels.CustomersReportVM

@{
    ViewData["Title"] = "Customers Report";
    var totalRevenue = Model.Rows.Sum(r => r.Revenue);
    var totalCost = Model.Rows.Sum(r => r.Cost);
    var totalProfit = Model.Rows.Sum(r => r.Profit);
    var totalMargin = totalRevenue > 0 ? totalProfit / totalRevenue : 0m;
}

<h2>Customers Report</h2>

<!-- FILTER BAR (styled like OrdersReport / BooksSold) -->
<form method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <!-- DATE RANGE -->
        <div class="col-md-3">
            <label class="form-label">Start Date</label>
            <input class="form-control" type="date" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-3">
            <label class="form-label">End Date</label>
            <input class="form-control" type="date" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
        </div>

        <!-- REVENUE RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Revenue</label>
            <input class="form-control" type="number" step="0.01" name="MinRevenue" value="@Model.Filter.MinRevenue" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Revenue</label>
            <input class="form-control" type="number" step="0.01" name="MaxRevenue" value="@Model.Filter.MaxRevenue" placeholder="$999" />
        </div>

        <!-- AVG COST RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Avg Cost</label>
            <input class="form-control" type="number" step="0.01" name="MinAvgCost" value="@Model.Filter.MinAvgCost" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Avg Cost</label>
            <input class="form-control" type="number" step="0.01" name="MaxAvgCost" value="@Model.Filter.MaxAvgCost" placeholder="$999" />
        </div>

        <!-- PROFIT RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Profit</label>
            <input class="form-control" type="number" step="0.01" name="MinProfit" value="@Model.Filter.MinProfit" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Profit</label>
            <input class="form-control" type="number" step="0.01" name="MaxProfit" value="@Model.Filter.MaxProfit" placeholder="$999" />
        </div>

        <!-- CUSTOMER NAME (text filter) -->
        <div class="col-md-3">
            <label class="form-label">Customer Name</label>
            <input class="form-control" type="text" name="CustomerName" value="@Model.Filter.CustomerName" placeholder="e.g., Jane Doe" />
        </div>

        <!-- SORTING -->
        <div class="col-md-3">
            <label class="form-label">Sort By</label>
            <select class="form-select" name="sort">
                <option value="profitAsc" selected="@(Model.CurrentSort == "profitAsc")">Profit ↑</option>
                <option value="profitDesc" selected="@(Model.CurrentSort == "profitDesc")">Profit ↓</option>
                <option value="revenueAsc" selected="@(Model.CurrentSort == "revenueAsc")">Revenue ↑</option>
                <option value="revenueDesc" selected="@(Model.CurrentSort == "revenueDesc")">Revenue ↓</option>
                
            </select>
        </div>

        <!-- BUTTONS -->
        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Apply</button>
            <a class="btn btn-secondary w-100" href="@Url.Action("CustomersReport", "Reports")">Clear</a>
        </div>
    </div>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Total Qty</th>
            <th>Revenue</th>
            <th>Cost</th>
            <th>Profit</th>
            <th>Margin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.CustomerName (@r.CustomerId)</td>
                <td>@r.TotalQuantity</td>
                <td>@r.Revenue.ToString("c")</td>
                <td>@r.Cost.ToString("c")</td>
                <td>@r.Profit.ToString("c")</td>
                <td>@($"{r.Margin:P2}")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-secondary fw-bold">
            <td colspan="2">Totals</td>
            <td>@totalRevenue.ToString("c")</td>
            <td>@totalCost.ToString("c")</td>
            <td>@totalProfit.ToString("c")</td>
            <td>@($"{totalMargin:P2}")</td>
        </tr>
    </tfoot>
</table>
