@model Team24_BevosBooks.ViewModels.OrdersReportVM

@{
    ViewData["Title"] = "Orders Report";
    var totalRevenue = Model.Rows.Sum(r => r.OrderRevenue);
    var totalCost = Model.Rows.Sum(r => r.OrderCost);
    var totalProfit = Model.Rows.Sum(r => r.OrderProfit);
    var totalMargin = totalRevenue > 0 ? totalProfit / totalRevenue : 0m;
}

<h2>Orders Report</h2>

<form method="get" class="mb-3 d-flex flex-wrap gap-2">
    <input class="form-control" style="max-width:180px" type="date" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
    <input class="form-control" style="max-width:180px" type="date" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />

    <!-- NEW: Revenue filters -->
    <input class="form-control" style="max-width:160px" type="number" step="0.01" name="MinRevenue"
           value="@Model.Filter.MinRevenue" placeholder="Min Revenue" />
    <input class="form-control" style="max-width:160px" type="number" step="0.01" name="MaxRevenue"
           value="@Model.Filter.MaxRevenue" placeholder="Max Revenue" />


    <!-- Avg Cost filters -->
    <input class="form-control" style="max-width:160px" type="number" step="0.01" name="MinAvgCost"
           value="@Model.Filter.MinAvgCost" placeholder="Min Avg Cost" />
    <input class="form-control" style="max-width:160px" type="number" step="0.01" name="MaxAvgCost"
           value="@Model.Filter.MaxAvgCost" placeholder="Max Avg Cost" />

    <!-- Profit filters -->
    <input class="form-control" style="max-width:160px" type="number" step="0.01" name="MinProfit"
           value="@Model.Filter.MinProfit" placeholder="Min Profit" />
    <input class="form-control" style="max-width:160px" type="number" step="0.01" name="MaxProfit"
           value="@Model.Filter.MaxProfit" placeholder="Max Profit" />

    

    <select class="form-select" style="max-width:220px" name="sort">
        <option value="recent" selected="@(Model.CurrentSort == "recent")">Most recent</option>
        <option value="marginAsc" selected="@(Model.CurrentSort == "marginAsc")">Profit Margin ↑</option>
        <option value="marginDesc" selected="@(Model.CurrentSort == "marginDesc")">Profit Margin ↓</option>
        <option value="priceAsc" selected="@(Model.CurrentSort == "priceAsc")">Order price ↑</option>
        <option value="priceDesc" selected="@(Model.CurrentSort == "priceDesc")">Order price ↓</option>
    </select>

    <button class="btn btn-primary" type="submit">Apply</button>
    <a class="btn btn-secondary" href="@Url.Action("OrdersReport", "Reports")">Clear</a>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Total Qty</th>
            <th>Revenue</th>
            <th>Avg Cost</th>
            <th>Profit</th>
            <th>Margin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.OrderID</td>
                <td>@r.OrderDate.ToShortDateString()</td>
                <td>@r.CustomerName</td>
                <td>@r.TotalQuantity</td>
                <td>@r.OrderRevenue.ToString("c")</td>
                <td>@r.OrderCost.ToString("c")</td>
                <td>@r.OrderProfit.ToString("c")</td>
                <td>@($"{r.OrderMargin:P2}")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-secondary fw-bold">
            <td colspan="4">Totals</td>
            <td>@totalRevenue.ToString("c")</td>
            <td>@totalCost.ToString("c")</td>
            <td>@totalProfit.ToString("c")</td>
            <td>@($"{totalMargin:P2}")</td>
        </tr>
    </tfoot>
</table>
