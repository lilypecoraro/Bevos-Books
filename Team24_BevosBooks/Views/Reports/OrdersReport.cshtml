@model Team24_BevosBooks.ViewModels.OrdersReportVM

@{
    ViewData["Title"] = "Orders Report";
    var totalRevenue = Model.Rows.Sum(r => r.OrderRevenue);
    var totalCost = Model.Rows.Sum(r => r.OrderCost);
    var totalProfit = Model.Rows.Sum(r => r.OrderProfit);
    var totalMargin = totalRevenue > 0 ? totalProfit / totalRevenue : 0m;
}

<h2>Orders Report</h2>

<!-- FILTER BAR (modeled after BooksSold) -->
<form method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <!-- DATE RANGE -->
        <div class="col-md-3">
            <label class="form-label">Start Date</label>
            <input class="form-control" type="date" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-3">
            <label class="form-label">End Date</label>
            <input class="form-control" type="date" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
        </div>

        <!-- REVENUE RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Revenue</label>
            <input class="form-control" type="number" step="0.01" name="MinRevenue" value="@Model.Filter.MinRevenue" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Revenue</label>
            <input class="form-control" type="number" step="0.01" name="MaxRevenue" value="@Model.Filter.MaxRevenue" placeholder="$999" />
        </div>

        <!-- AVG COST RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Avg Cost</label>
            <input class="form-control" type="number" step="0.01" name="MinAvgCost" value="@Model.Filter.MinAvgCost" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Avg Cost</label>
            <input class="form-control" type="number" step="0.01" name="MaxAvgCost" value="@Model.Filter.MaxAvgCost" placeholder="$999" />
        </div>

        <!-- PROFIT RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Profit</label>
            <input class="form-control" type="number" step="0.01" name="MinProfit" value="@Model.Filter.MinProfit" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Profit</label>
            <input class="form-control" type="number" step="0.01" name="MaxProfit" value="@Model.Filter.MaxProfit" placeholder="$999" />
        </div>

        <!-- CUSTOMER NAME (text filter) -->
        <div class="col-md-3">
            <label class="form-label">Customer Name</label>
            <input class="form-control" type="text" name="CustomerName" value="@Model.Filter.CustomerName" placeholder="e.g., Jane Doe" />
        </div>

        <!-- SORTING -->
        <div class="col-md-3">
            <label class="form-label">Sort By</label>
            <select class="form-select" name="sort">
                <option value="recent" selected="@(Model.CurrentSort == "recent")">Most recent</option>
                <option value="marginAsc" selected="@(Model.CurrentSort == "marginAsc")">Profit Margin ↑</option>
                <option value="marginDesc" selected="@(Model.CurrentSort == "marginDesc")">Profit Margin ↓</option>
                <option value="priceAsc" selected="@(Model.CurrentSort == "priceAsc")">Order price ↑</option>
                <option value="priceDesc" selected="@(Model.CurrentSort == "priceDesc")">Order price ↓</option>
            </select>
        </div>

        <!-- BUTTONS (match BooksSold layout) -->
        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Apply</button>
            <a class="btn btn-secondary w-100" href="@Url.Action("OrdersReport", "Reports")">Clear</a>
        </div>
    </div>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Titles</th> <!-- NEW -->
            <th>Total Qty</th>
            <th>Revenue</th>
            <th>Avg Cost</th>
            <th>Profit</th>
            <th>Margin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.OrderID</td>
                <td>@r.OrderDate.ToShortDateString()</td>
                <td>@r.CustomerName</td>
                <td>@r.BookTitles</td> <!-- NEW -->
                <td>@r.TotalQuantity</td>
                <td>@r.OrderRevenue.ToString("c")</td>
                <td>@r.OrderCost.ToString("c")</td>
                <td>@r.OrderProfit.ToString("c")</td>
                <td>@($"{r.OrderMargin:P2}")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-secondary fw-bold">
            <td colspan="5">Totals</td> <!-- shifted because of new column -->
            <td>@totalRevenue.ToString("c")</td>
            <td>@totalCost.ToString("c")</td>
            <td>@totalProfit.ToString("c")</td>
            <td>@($"{totalMargin:P2}")</td>
        </tr>
    </tfoot>
</table>
