@model Team24_BevosBooks.ViewModels.OrdersReportVM
@{
    ViewData["Title"] = "Orders Report";
}
<h2>Orders Report</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <input class="form-control" type="date" name="StartDate" />
    <input class="form-control" type="date" name="EndDate" />
    <select class="form-select" name="sort">
        <option value="recent">Most recent</option>
        <option value="profitAsc">Profit ↑</option>
        <option value="profitDesc">Profit ↓</option>
        <option value="priceAsc">Order price ↑</option>
        <option value="priceDesc">Order price ↓</option>
    </select>
    <button class="btn btn-primary" type="submit">Apply</button>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Total Qty</th>
            <th>Revenue</th>
            <th>Cost</th>
            <th>Profit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.OrderID</td>
                <td>@r.OrderDate.ToShortDateString()</td>
                <td>@r.CustomerName</td>
                <td>@r.TotalQuantity</td>
                <td>@r.OrderRevenue.ToString("c")</td>
                <td>@r.OrderCost.ToString("c")</td>
                <td>@r.OrderProfit.ToString("c")</td>
            </tr>
        }
    </tbody>
</table>
