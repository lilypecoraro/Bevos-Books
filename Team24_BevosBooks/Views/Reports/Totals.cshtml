@model Team24_BevosBooks.ViewModels.TotalsReportVM

@{
    ViewData["Title"] = "Totals";
}

<h2 class="mb-4 text-white">Totals</h2>

<p class="text-white"><strong>Record count:</strong> @Model.RecordCount</p>

<ul class="list-group bg-dark">
    <li class="list-group-item bg-dark text-white">
        <strong>Total Revenue:</strong> @Model.TotalRevenue.ToString("c")
    </li>
    <li class="list-group-item bg-dark text-white">
        <strong>Total Cost:</strong> @Model.TotalCost.ToString("c")
    </li>
    <li class="list-group-item bg-dark text-white">
        <strong>Total Profit:</strong> @Model.TotalProfit.ToString("c")
    </li>
    <li class="list-group-item bg-dark text-white">
        <strong>Total Margin:</strong> @($"{Model.TotalMargin:P2}")
    </li>
</ul>
