@model Team24_BevosBooks.ViewModels.InventoryReportVM
@{
    ViewData["Title"] = "Current Inventory";
}
<h2>Current Inventory</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <select class="form-select" name="sort">
        <option value="title">Title</option>
        <option value="qtyAsc">Qty ↑</option>
        <option value="qtyDesc">Qty ↓</option>
        <option value="costAsc">Avg Cost ↑</option>
        <option value="costDesc">Avg Cost ↓</option>
    </select>
    <button class="btn btn-primary" type="submit">Apply</button>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Inventory Qty</th>
            <th>Average Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.InventoryQuantity</td>
                <td>@r.AverageCost.ToString("c")</td>
            </tr>
        }
    </tbody>
</table>

<p class="mt-3"><strong>Total Inventory Value:</strong> @Model.TotalInventoryValue.ToString("c")</p>
