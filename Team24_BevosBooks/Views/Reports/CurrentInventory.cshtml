@model Team24_BevosBooks.ViewModels.InventoryReportVM

@{
    ViewData["Title"] = "Current Inventory";
}

<h2>Current Inventory</h2>

<!-- FILTER BAR (styled like BooksSold / OrdersReport) -->
<form method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <!-- AVG COST RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Avg Cost</label>
            <input class="form-control" type="number" step="0.01"
                   name="MinAvgCost" value="@Model.Filter.MinAvgCost" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Avg Cost</label>
            <input class="form-control" type="number" step="0.01"
                   name="MaxAvgCost" value="@Model.Filter.MaxAvgCost" placeholder="$999" />
        </div>

        <!-- INVENTORY QTY RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Qty</label>
            <input class="form-control" type="number" step="1"
                   name="MinInventoryQty" value="@Model.Filter.MinInventoryQty" placeholder="0" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Qty</label>
            <input class="form-control" type="number" step="1"
                   name="MaxInventoryQty" value="@Model.Filter.MaxInventoryQty" placeholder="9999" />
        </div>

        <!-- SORTING -->
        <div class="col-md-2">
            <label class="form-label">Sort By</label>
            <select class="form-select" name="sort">
                <option value="title" selected="@(Model.CurrentSort == "title")">Title</option>
                <option value="qtyAsc" selected="@(Model.CurrentSort == "qtyAsc")">Qty ↑</option>
                <option value="qtyDesc" selected="@(Model.CurrentSort == "qtyDesc")">Qty ↓</option>
                <option value="costAsc" selected="@(Model.CurrentSort == "costAsc")">Avg Cost ↑</option>
                <option value="costDesc" selected="@(Model.CurrentSort == "costDesc")">Avg Cost ↓</option>
            </select>
        </div>

        <!-- BUTTONS -->
        <div class="col-md-2 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Apply</button>
            <a class="btn btn-secondary w-100" href="@Url.Action("CurrentInventory", "Reports")">Clear</a>
        </div>
    </div>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Inventory Qty</th>
            <th>Average Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.InventoryQuantity</td>
                <td>@r.AverageCost.ToString("c")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-secondary fw-bold">
            <td colspan="2">Total Inventory Value</td>
            <td>@Model.TotalInventoryValue.ToString("c")</td>
        </tr>
    </tfoot>
</table>
