@model Team24_BevosBooks.ViewModels.BooksSoldReportVM

@{
    ViewData["Title"] = "Books Sold";
}

<h2>Books Sold</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <input class="form-control" type="date" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
    <input class="form-control" type="date" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
    <input class="form-control" type="number" step="0.01" name="MinPrice" value="@Model.Filter.MinPrice" placeholder="Min price" />
    <input class="form-control" type="number" step="0.01" name="MaxPrice" value="@Model.Filter.MaxPrice" placeholder="Max price" />
    <input class="form-control" type="number" name="BookId" value="@Model.Filter.BookId" placeholder="Book ID" />
    <input class="form-control" type="number" name="CustomerId" value="@Model.Filter.CustomerId" placeholder="Customer ID" />

    <select class="form-select" name="sort">
        <option value="recent" selected="@(Model.CurrentSort == "recent")">Most recent</option>
        <option value="profitAsc" selected="@(Model.CurrentSort == "profitAsc")">Profit ↑</option>
        <option value="profitDesc" selected="@(Model.CurrentSort == "profitDesc")">Profit ↓</option>
        <option value="priceAsc" selected="@(Model.CurrentSort == "priceAsc")">Price ↑</option>
        <option value="priceDesc" selected="@(Model.CurrentSort == "priceDesc")">Price ↓</option>
        <option value="popular" selected="@(Model.CurrentSort == "popular")">Most popular</option>
    </select>

    <button class="btn btn-primary" type="submit">Apply</button>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Qty</th>
            <th>Order #</th>
            <th>Customer</th>
            <th>Selling Price</th>
            <th>Avg Cost</th>
            <th>Profit</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.Quantity</td>
                <td>@r.OrderID</td>
                <td>@r.CustomerName</td>
                <td>@r.SellingPrice.ToString("c")</td>
                <td>@r.AverageCost.ToString("c")</td>
                <td>@r.ProfitMargin.ToString("c")</td> <!-- absolute profit -->
                <td>@r.OrderDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
