@model Team24_BevosBooks.ViewModels.BooksSoldReportVM

@{
    ViewData["Title"] = "Books Sold";
}

<h2 class="mb-3">Books Sold</h2>

<!-- FILTER BAR -->
<form method="get" class="mb-4">

    <div class="row g-3 align-items-end">

        <!-- DATE RANGE -->
        <div class="col-md-3">
            <label class="form-label">Start Date</label>
            <input class="form-control" type="date" name="StartDate"
                   value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-3">
            <label class="form-label">End Date</label>
            <input class="form-control" type="date" name="EndDate"
                   value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
        </div>

        <!-- PRICE RANGE -->
        <div class="col-md-2">
            <label class="form-label">Min Price</label>
            <input class="form-control" type="number" step="0.01"
                   name="MinPrice" value="@Model.Filter.MinPrice" placeholder="$0.00" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Max Price</label>
            <input class="form-control" type="number" step="0.01"
                   name="MaxPrice" value="@Model.Filter.MaxPrice" placeholder="$999" />
        </div>

        <!-- BOOK / CUSTOMER -->
        <div class="col-md-2">
            <label class="form-label">Book ID</label>
            <input class="form-control" type="number"
                   name="BookId" value="@Model.Filter.BookId" placeholder="Ex: 222011" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Customer #</label>
            <input class="form-control" type="number"
                   name="CustomerId" value="@Model.Filter.CustomerId" placeholder="User ID" />
        </div>

        <!-- SORTING -->
        <div class="col-md-3">
            <label class="form-label">Sort By</label>
            <select class="form-select" name="sort">
                <option value="recent" selected="@(Model.CurrentSort == "recent")">Most recent</option>
                <option value="popular" selected="@(Model.CurrentSort == "popular")">Most popular</option>
                <option value="profitDesc" selected="@(Model.CurrentSort == "profitDesc")">Profit ↓</option>
                <option value="profitAsc" selected="@(Model.CurrentSort == "profitAsc")">Profit ↑</option>
                <option value="priceDesc" selected="@(Model.CurrentSort == "priceDesc")">Price ↓</option>
                <option value="priceAsc" selected="@(Model.CurrentSort == "priceAsc")">Price ↑</option>
            </select>
        </div>

        <!-- BUTTONS -->
        <div class="col-md-2 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Apply</button>

            <a class="btn btn-secondary w-100"
               href="@Url.Action("BooksSold", "Reports")">
                Clear
            </a>
        </div>

    </div>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<!-- TABLE -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Qty</th>
            <th>Order #</th>
            <th>Customer</th>
            <th>Selling Price</th>
            <th>Avg Cost</th>
            <th>Profit</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.Quantity</td>
                <td>@r.OrderID</td>
                <td>@r.CustomerName</td>
                <td>@r.SellingPrice.ToString("c")</td>
                <td>@r.AverageCost.ToString("c")</td>
                <td>@r.ProfitMargin.ToString("c")</td>
                <td>@r.OrderDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>