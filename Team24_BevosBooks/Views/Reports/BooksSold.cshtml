@model Team24_BevosBooks.ViewModels.BooksSoldReportVM
@{
    ViewData["Title"] = "Books Sold";
}
<h2>Books Sold</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <input class="form-control" type="date" name="StartDate" />
    <input class="form-control" type="date" name="EndDate" />
    <input class="form-control" type="number" step="0.01" name="MinPrice" placeholder="Min price" />
    <input class="form-control" type="number" step="0.01" name="MaxPrice" placeholder="Max price" />
    <input class="form-control" type="number" name="BookId" placeholder="Book ID" />
    <input class="form-control" type="number" name="CustomerId" placeholder="Customer ID" />
    <select class="form-select" name="sort">
        <option value="recent">Most recent</option>
        <option value="profitAsc">Profit ↑</option>
        <option value="profitDesc">Profit ↓</option>
        <option value="priceAsc">Price ↑</option>
        <option value="priceDesc">Price ↓</option>
        <option value="popular">Most popular</option>
    </select>
    <button class="btn btn-primary" type="submit">Apply</button>
</form>

<p><strong>Record count:</strong> @Model.RecordCount</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Qty</th>
            <th>Order #</th>
            <th>Customer</th>
            <th>Selling Price</th>
            <th>Avg Cost</th>
            <th>Profit Margin</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.Quantity</td>
                <td>@r.OrderID</td>
                <td>@r.CustomerName</td>
                <td>@r.SellingPrice.ToString("c")</td>
                <td>@r.AverageCost.ToString("c")</td>
                <td>@r.ProfitMargin.ToString("c")</td>
                <td>@r.OrderDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
