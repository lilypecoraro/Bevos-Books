@using Microsoft.AspNetCore.Identity
@using Team24_BevosBooks.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bevo's Books</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Bevo's Books
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">

                    <!-- LEFT SIDE NAVIGATION -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- HOME -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- BOOKS -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">Books</a>
                        </li>

                        <!-- GENRES -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Genres" asp-action="Index">Genres</a>
                        </li>

                        <!-- CART (CUSTOMER ONLY) -->
                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="Cart">Cart</a>
                            </li>
                        }

                        <!-- EMPLOYEE LINKS -->
                        @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reviews" asp-action="Pending">Review Queue</a>
                            </li>
                        }

                        <!-- ADMIN LINKS -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="RoleAdmin" asp-action="ManageEmployees">Employees</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="RoleAdmin" asp-action="ManageCustomers">Customers</a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT SIDE LOGIN PARTIAL -->
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <!-- PAGE CONTENT -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @(DateTime.Now.Year) - Bevo's Books - Team 24
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
