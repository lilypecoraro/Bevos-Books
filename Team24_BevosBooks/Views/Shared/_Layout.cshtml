@using Microsoft.AspNetCore.Identity
@using Team24_BevosBooks.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bevo's Books</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600&family=VT323&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-override.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .form-label { color: #ffffff !important; }
        .form-select { color: #ffffff !important; background-color: rgba(255,255,255,0.15) !important; border: 1px solid rgba(255,255,255,0.4) !important; }
        .form-select option { color: #000000 !important; }
        .form-control { color: #ffffff !important; background-color: rgba(255,255,255,0.15) !important; border: 1px solid rgba(255,255,255,0.4) !important; }
        .form-control::placeholder { color: rgba(255,255,255,0.7) !important; }
        .form-check-label { color: #ffffff !important; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bevo-navbar">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/BevoBookLogo.png" alt="BB Logo" style="height:32px; width:auto; margin-right:8px;">
                Bevo's Books
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="HomeCatalog">Discover</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="booksDropdown" role="button" data-bs-toggle="dropdown">Books</a>
                        <ul class="dropdown-menu" aria-labelledby="booksDropdown">
                            <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Browse Books</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Create">Add Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Genres" asp-action="Index">Manage Genres</a></li>
                            }
                        </ul>
                    </li>
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Cart">Cart</a></li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">Admin Panel</a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Reviews" asp-action="Pending">Review Queue</a></li>
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="AllOrders">All Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="RoleAdmin" asp-action="ManageCustomers">Manage Customers</a></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="Coupons" asp-action="Index">Manage Coupons</a></li>
                                    <li><a class="dropdown-item" asp-controller="RoleAdmin" asp-action="ManageEmployees">Manage Employees</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="ManualReorder">Manual Reorder</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="AutoReorder">Automatic Reorder</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="ViewOrders">View Orders</a></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    @if (ViewData["FullWidth"] is bool full && full) { @RenderBody() } else { <div class="container mt-4">@RenderBody()</div> }
    <footer class="border-top footer text-muted mt-4"><div class="container">&copy; @(DateTime.Now.Year) - Bevo's Books - Team 24</div></footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
