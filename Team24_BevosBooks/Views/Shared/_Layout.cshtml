<style>
 /* FOOTER BASE */
.bevo-footer {
    padding: 1.8rem 0;
    background-color: #111;
    border-top: 2px solid #f5b338;
    box-shadow: 0 -3px 18px rgba(245,179,56,0.35); /* orange glow */
    opacity: 0;
    animation: footerFade 1.2s ease forwards;
}

/* FOOTER ANIMATION */
@@keyframes footerFade {
    to { opacity: 1; }
}

.footer-inner {
    padding: 0.5rem 0;
}

/* LEFT SIDE TEXT */
.footer-small {
    font-size: 0.85rem;
    opacity: 0.8;
}

/* LONGHORN ICON */
.footer-longhorn {
    height: 34px;
    opacity: 0.35;
    filter: brightness(200%);
}

/* MCCOMBS LOGO (HIGH VISIBILITY) */
.footer-mccombs {
    height: 40px;
    width: auto;
    opacity: 1;
    filter: brightness(300%) contrast(120%); /* strongest visibility */
    mix-blend-mode: screen; /* forces white to pop on dark */
    transition: 0.25s ease;
}

.footer-mccombs:hover {
    filter: brightness(420%) contrast(130%);
}

/* NAV LINKS */
.footer-links a {
    color: #f5b338;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: 0.2s ease;
}

.footer-links a:hover {
    text-shadow: 0 0 6px rgba(245,179,56,0.8);
}

/* CENTER DOTS */
.footer-dot {
    color: #888;
    margin: 0 6px;
}

/* RESPONSIVE FIXES */
@@media (max-width: 768px) {
    .footer-right, .footer-left {
        text-align: center !important;
    }
}
    .footer-right .footer-small {
        color: #ffffff !important;
        opacity: 0.95;
    }
</style>

@using Microsoft.AspNetCore.Identity
@using Team24_BevosBooks.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bevo's Books</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600&family=VT323&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-override.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bevo-navbar fixed-top" style="z-index:99999;">
        <div class="container-fluid">

            <!-- BRAND -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/BevoBookLogo.png" alt="BB Logo"
                     style="height:32px; width:auto; margin-right:8px;">
                Bevo's Books
            </a>

            <!-- MOBILE TOGGLER -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAV CONTENT -->
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- ABOUT US -->
                    @if (!User.Identity.IsAuthenticated || User.IsInRole("Customer"))
                        {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        }

                    <!-- DISCOVER (visible if Customer OR not logged in) -->
                    @if (!User.Identity.IsAuthenticated || User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Discover">Discover</a>
                        </li>
                    }
                    <!-- BOOKS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="booksDropdown" role="button" data-bs-toggle="dropdown">
                            Books
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="booksDropdown">
                            <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Browse Books</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider" /></li>
                                <li class="dropdown-header">Catalog Management</li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Create">Add Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Genres" asp-action="Index">Manage Genres</a></li>
                            }
                        </ul>
                    </li>


                    <!-- CUSTOMER NAV -->
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Orders" asp-action="Cart">Cart</a>
                        </li>
                    }

                    <!-- REPORTS (ADMIN ONLY) -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                                Reports
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reportsDropdown">
                                <li class="dropdown-header">Sales & Orders</li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="BooksSold">Books Sold</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="OrdersReport">Orders Report</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li class="dropdown-header">Customers & Reviews</li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="CustomersReport">Customers Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReviewsReport">Reviews Report</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li class="dropdown-header">Inventory & Totals</li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="CurrentInventory">Current Inventory</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Totals">Totals</a></li>
                            </ul>
                        </li>
                    }

                    <!-- ADMIN / EMPLOYEE PANEL -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                @(User.IsInRole("Admin") ? "Admin Panel" : "Employee Panel")
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li class="dropdown-header">Orders & Customers</li>
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="AllOrders">All Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="RoleAdmin" asp-action="ManageCustomers">Manage Customers</a></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="RoleAdmin" asp-action="ManageEmployees">Manage Employees</a></li>
                                    <!-- NEW: Shipping Settings -->
                                    <li><a class="dropdown-item" asp-controller="ShippingSettings" asp-action="Edit">Shipping Settings</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li class="dropdown-header">Reviews & Promotions</li>
                                <li><a class="dropdown-item" asp-controller="Reviews" asp-action="Pending">Review Queue</a></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="Reviews" asp-action="Manage">Approved / Rejected Reviews</a></li>
                                    <li><a class="dropdown-item" asp-controller="Coupons" asp-action="Index">Manage Coupons</a></li>
                                    <!-- NEW: Manage Item Discounts -->
                                    <li><a class="dropdown-item" asp-controller="ItemDiscounts" asp-action="Index">Manage Item Discounts</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="dropdown-header">Inventory & Procurement</li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="ManualReorder">Manual Reorder</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="AutoReorder">Automatic Reorder</a></li>
                                    <li><a class="dropdown-item" asp-controller="Procurement" asp-action="ViewOrders">Supplier Orders</a></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>

                <!-- LOGIN PARTIAL -->
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>

    @if (ViewData["FullWidth"] is bool full && full)
    {
        @RenderBody()
    }
    else
    {
        <div class="container mt-4">
            @RenderBody()
        </div>
    }

<footer class="bevo-footer mt-4">
    <div class="container footer-inner d-flex flex-column flex-md-row justify-content-between align-items-center">

        <!-- LEFT SECTION -->
        <div class="footer-left text-muted">
            © @DateTime.Now.Year — Bevo's Books
            <br />
            <span class="footer-small">Built by Team 24 • MIS 333K</span>
        </div>

        <!-- CENTER (Longhorn Icon + Nav Links) -->
        <div class="footer-center text-center mt-3 mt-md-0">

            <div class="footer-links">
                <a asp-controller="Home" asp-action="AboutUs">About Us</a>
                <span class="footer-dot">•</span>
                <a href="https://github.com/mis333k-fall2025/Group-24" target="_blank">GitHub</a>
                <span class="footer-dot">•</span>
                <a asp-controller="Home" asp-action="Contact">Contact Us</a>
            </div>
        </div>

        <!-- RIGHT SECTION (McCombs Logo) -->
        <div class="footer-right text-end mt-3 mt-md-0">
            <span class="footer-small text-muted">Made at</span>
            <br />
            <img src="~/images/mccombs.png" class="footer-mccombs" alt="Texas McCombs">
        </div>
    </div>
</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
