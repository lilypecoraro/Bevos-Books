@model IEnumerable<Team24_BevosBooks.Models.Coupon>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Team24_BevosBooks.Models.AppUser> SignInManager
@inject UserManager<Team24_BevosBooks.Models.AppUser> UserManager

@{
    ViewData["Title"] = "Coupons";
    bool isAdmin = SignInManager.IsSignedIn(User) && User.IsInRole("Admin");
}

<h2>Coupons</h2>

@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Coupon
        </a>
    </p>
}

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Coupon Code</th>
            <th>Type</th>
            <th>Discount</th>
            <th>Free Shipping Threshold</th>
            <th>Status</th>
            @if (isAdmin)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model)
        {
            <tr class="@(coupon.Status == "Disabled" ? "table-secondary" : "")">
                <td><strong>@coupon.CouponCode</strong></td>
                <td>@coupon.CouponType</td>
                <td>
                    @if (coupon.DiscountPercent.HasValue)
                    {
                        <span class="badge bg-success">@coupon.DiscountPercent.Value.ToString("F2")% OFF</span>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if (coupon.FreeThreshold.HasValue)
                    {
                        <span class="text-dark">@coupon.FreeThreshold.Value.ToString("C")</span>
                    }
                    else
                    {
                        <span class="text-dark">-</span>
                    }
                </td>
                <td>
                    @if (coupon.Status == "Enabled")
                    {
                        <span class="badge bg-success">Enabled</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Disabled</span>
                    }
                </td>
                @if (isAdmin)
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@coupon.CouponID" class="btn btn-sm btn-info">Details</a>
                        @if (coupon.Status == "Enabled")
                        {
                            <a asp-action="Disable" asp-route-id="@coupon.CouponID"
                               class="btn btn-sm btn-warning"
                               onclick="return confirm('Are you sure you want to disable this coupon?');">
                                Disable
                            </a>
                        }
                        else
                        {
                            <a asp-action="Enable" asp-route-id="@coupon.CouponID"
                               class="btn btn-sm btn-success">
                                Enable
                            </a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="no-results-box text-dark">
        No coupons available.
        @if (isAdmin)
        {
            <a asp-action="Create" class="fw-bold text-dark">
                Create your first coupon
            </a>
        }
    </div>
}
