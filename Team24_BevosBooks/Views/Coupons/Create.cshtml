@model Team24_BevosBooks.Models.Coupon

@{
    ViewData["Title"] = "Create Coupon";
    bool freeAllChecked = (ViewBag.FreeShippingAllOrders as bool?) ?? false;
}

<h2>Create New Coupon</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Coupon Code -->
            <div class="form-group mb-3">
                <label asp-for="CouponCode" class="control-label"></label>
                <input asp-for="CouponCode" id="CouponCode" class="form-control" maxlength="20" style="text-transform: uppercase;" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>

            <!-- Coupon Type -->
            <div class="form-group mb-3">
                <label asp-for="CouponType" class="control-label"></label>
                <select asp-for="CouponType" id="couponTypeSelect" class="form-select">
                    <option value="">-- Select Type --</option>
                    <option value="PercentOff">Percent Off</option>
                    <option value="FreeShipping">Free Shipping</option>
                </select>
                <span asp-validation-for="CouponType" class="text-danger"></span>
            </div>

            <!-- Percent Off group -->
            <div class="form-group mb-3" id="discountPercentGroup" style="display:none;">
                <label asp-for="DiscountPercent" class="control-label"></label>
                <input asp-for="DiscountPercent" id="DiscountPercent" class="form-control" type="number" step="0.01" min="0" max="100" />
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>

            <!-- Free Shipping group -->
            <div class="form-group mb-3" id="freeShippingGroup" style="display:none;">
                <label asp-for="FreeThreshold" class="control-label"></label>
                <input asp-for="FreeThreshold" id="FreeThreshold" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="FreeThreshold" class="text-danger"></span>

                <div class="form-check mt-2">
                    <!-- Plain checkbox, not bound to model -->
                    <input type="checkbox" name="FreeShippingAllOrders" id="FreeShippingAllOrders" class="form-check-input" @(freeAllChecked ? "checked" : "") />
                    <label for="FreeShippingAllOrders" class="form-check-label">Apply to all orders (ignore threshold)</label>
                </div>
            </div>

            <div class="alert alert-info mt-3 text-dark">
                <strong>Note:</strong> Once created, coupons cannot be edited. You can only enable or disable them.
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create Coupon" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        /* Closed select shows white text */
        #couponTypeSelect {
            color: #fff !important;
            background-color: rgba(255,255,255,0.15); /* keep existing look if desired */
        }

        /* Dropdown options list shows black text */
        #couponTypeSelect option {
            color: #000 !important;
        }

        /* Make the placeholder option white to match the control when listed */
        #couponTypeSelect option[value=""] {
            color: #fff !important;
        }
    </style>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>(function () {
            function toggleFields() {
                var selectedType = $('#couponTypeSelect').val();

                if (selectedType === 'PercentOff') {
                    $('#discountPercentGroup').show();
                    $('#freeShippingGroup').hide();
                    $('#FreeThreshold').val('');
                    $('#FreeShippingAllOrders').prop('checked', false);
                } else if (selectedType === 'FreeShipping') {
                    $('#discountPercentGroup').hide();
                    $('#freeShippingGroup').show();
                    $('#DiscountPercent').val('');
                } else {
                    $('#discountPercentGroup').hide();
                    $('#freeShippingGroup').hide();
                }
            }

            $(document).ready(function () {
                $('#couponTypeSelect').on('change', toggleFields);
                toggleFields(); // run once on page load
            });
        })();</script>
}
