@model Team24_BevosBooks.Models.AppUser

@{
    ViewData["Title"] = "Edit Employee";
}

<h2 class="mt-4 mb-3">Edit Employee</h2>

<form asp-action="EditEmployee" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Address fields -->
    <div class="mb-2">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="State"></label>
        <select asp-for="State" class="form-select" asp-items="ViewBag.States">
            <option value="">-- Select State --</option>
        </select>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ZipCode"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <!-- Status dropdown -->
    <div class="mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select">
            <option value="Employee">Employee</option>
            <option value="Admin">Admin</option>
            <option value="Fired">Fired</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageEmployees" class="btn btn-secondary ms-2">Cancel</a>
</form>
