@model IEnumerable<Team24_BevosBooks.Models.AppUser>

@{
    ViewData["Title"] = "Manage Customers";
}

<h2 class="mt-4 mb-3">Customer Accounts</h2>

<!-- NEW: Create Customer button -->
<div class="mb-3">
    <a asp-action="CreateCustomer" class="btn btn-primary">Add New Customer</a>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Customer #</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var cust in Model)
        {
            <tr>
                <td>
                    @(
                                    cust.CustomerNumber.HasValue
                                    ? cust.CustomerNumber.Value.ToString()
                                    : "—"
                                    )
                </td>
                <td>@cust.FirstName @cust.LastName</td>
                <td>@cust.Email</td>
                <td>@cust.Status</td>
                <td>
                    <!-- NEW: Edit Customer button -->
                    <a asp-action="EditCustomer"
                       asp-route-id="@cust.Id"
                       class="btn btn-sm btn-warning me-2">
                        Edit
                    </a>

                    @if (cust.Status != AppUser.UserStatus.Disabled)
                    {
                        <!-- Disable button with confirm -->
                        <a asp-action="Disable"
                           asp-route-id="@cust.Id"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to DISABLE this customer? They will no longer be able to log in.');">
                            Disable
                        </a>
                    }
                    else
                    {
                        <!-- Enable button with confirm -->
                        <a asp-action="Enable"
                           asp-route-id="@cust.Id"
                           class="btn btn-sm btn-success"
                           onclick="return confirm('Re-enable this customer so they can log in again?');">
                            Enable
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
