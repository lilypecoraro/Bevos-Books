@model Team24_BevosBooks.Models.AppUser

@{
    ViewData["Title"] = "Edit Customer";
}

<h2 class="mt-4 mb-3">Edit Customer</h2>

<form asp-action="EditCustomer" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <select asp-for="State" class="form-control" asp-items="ViewBag.States"></select>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ZipCode"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageCustomers" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Styles {
    <style>
        /* Force black text for the State dropdown and its options on this page */
        select.form-control[name="State"] {
            color: #000 !important;
            background-color: #fff !important;
            border: 1px solid #ccc !important;
        }
        select.form-control[name="State"] option {
            color: #000 !important;
        }
    </style>
}
